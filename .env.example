# ==============================================================================
# FlashMath Environment Variables
# ==============================================================================
# Copy this file to .env and fill in the values
# 
# NEVER commit .env to version control!
# ==============================================================================

# ==============================================================================
# AUTH CONFIGURATION
# ==============================================================================
# Generate a secure secret: openssl rand -base64 32
AUTH_SECRET=your-super-secret-key-change-in-production

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL password for arena database
POSTGRES_PASSWORD=flashmath_secure_password_here

# ==============================================================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================================================
# SMTP server credentials
SMTP_HOST=mail.lanit.services
SMTP_PORT=587
SMTP_USER=auth-mailer@flashmath.io
SMTP_PASS=your-smtp-password-here
SMTP_SECURE=false

# Email addresses
EMAIL_FROM=Flash Math <auth-mailer@flashmath.io>
EMAIL_REPLY_TO=support@flashmath.io

# Alternative: Use Resend API instead of SMTP
# RESEND_API_KEY=re_xxxxxxxxxxxx

# ==============================================================================
# OPTIONAL: Redis Configuration
# ==============================================================================
# Only needed if using external Redis (default uses Docker container)
# REDIS_URL=redis://your-redis-host:6379
