# ==============================================================================
# FlashMath Environment Variables
# ==============================================================================
# Copy this file to .env and fill in the values
# 
# NEVER commit .env to version control!
# ==============================================================================

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=production

# Show development environment banner in footer
NEXT_PUBLIC_SHOW_DEV_BANNER=false

# ==============================================================================
# AUTH CONFIGURATION
# ==============================================================================
# Public URL for authentication callbacks
NEXTAUTH_URL=https://flashmath.io

# Generate a secure secret: openssl rand -base64 32
AUTH_SECRET=your-super-secret-key-change-in-production

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# SQLite path (use ./flashmath.db for local, /app/data/flashmath.db for Docker)
DATABASE_PATH=/app/data/flashmath.db

# PostgreSQL password for arena match database
# Used by docker-compose for the postgres service
POSTGRES_PASSWORD=flashmath_secure_password_here

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
# Only needed if using external Redis (docker-compose uses internal network)
# REDIS_URL=redis://your-redis-host:6379

# ==============================================================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================================================
# SMTP server credentials
SMTP_HOST=mail.lanit.services
SMTP_PORT=587
SMTP_USER=auth-mailer@flashmath.io
SMTP_PASS=your-smtp-password-here
SMTP_SECURE=false

# Email addresses
EMAIL_FROM=Flash Math <auth-mailer@flashmath.io>
EMAIL_REPLY_TO=support@flashmath.io

# Alternative: Use Resend API instead of SMTP
# RESEND_API_KEY=re_xxxxxxxxxxxx

# ==============================================================================
# AI HINTS (Optional)
# ==============================================================================
# Anthropic API key for AI-powered hints
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# ==============================================================================
# DEV TOOLS (Development Only)
# ==============================================================================
# Enable development tools panel (set to true only in development)
ENABLE_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
