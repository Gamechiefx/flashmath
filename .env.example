# Production Environment Variables
NODE_ENV=production
NEXTAUTH_URL=http://your-domain.com
AUTH_SECRET=generate-a-strong-secret-here
# Use 'openssl rand -base64 32' to generate a secret

# Database
DATABASE_PATH=/app/data/flashmath.db

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (Resend) - Primary
RESEND_API_KEY=

# Email (SMTP) - Fallback
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Email From Address
EMAIL_FROM=Flash Math <noreply@flashmath.io>
EMAIL_REPLY_TO=support@flashmath.io
