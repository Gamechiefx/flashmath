# Development Dockerfile for FlashMath
FROM node:20-alpine

# Install dependencies for native modules (better-sqlite3) and sqlite3 CLI
RUN apk add --no-cache libc6-compat python3 make g++ sqlite

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Run the custom server with Socket.io support
CMD ["npm", "run", "dev:server"]
